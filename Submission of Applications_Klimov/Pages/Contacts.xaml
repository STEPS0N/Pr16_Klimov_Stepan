<Page x:Class="Submission_of_Applications_Klimov.Pages.Contacts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_Klimov.Pages"
      mc:Ignorable="d" 
      Height="271" Width="840" MinWidth="840"
      Title="Contacts">

    <Grid Background="#F8F9FA">
        <Grid Margin="0,0,0,211" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top"
               Width="40" Source="/Images/aviat.png"/>
            <Label Content="Пермского авиационного техникума им. А.Д. Швецова" HorizontalAlignment="Left"
               Margin="55,24,0,0" VerticalAlignment="Top"/>
            <Label Content="Электронная приемная компания" HorizontalAlignment="Left" Margin="55,1,0,0"
       VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
        </Grid>
        <Grid Margin="0,60,0,0">
            <Label Content="Контакты" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Домашний номер:" HorizontalAlignment="Left" 
               Margin="10,41,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_HomeNumber" Height="24" Width="400" Margin="10,72,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label Content="Мобильный номер:" HorizontalAlignment="Right" 
               Margin="0,41,292,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_MobileNumber" Height="24" Width="400" Margin="0,72,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Электронный адрес:" HorizontalAlignment="Left" 
               Margin="10,101,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_EmailAddress" Height="24" Width="820" Margin="0,132,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Button Content="Продолжить" Click="Next" HorizontalAlignment="Right" Margin="0,0,10,5" VerticalAlignment="Bottom" Width="150" Height="25"/>
        </Grid>
    </Grid>
</Page>
