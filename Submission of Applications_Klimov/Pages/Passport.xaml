<Page x:Class="Submission_of_Applications_Klimov.Pages.Passport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_Klimov.Pages"
      mc:Ignorable="d" 
      Height="746" Width="840" MinHeight="746" MinWidth="840"
      Title="Passport">

    <Grid Background="#F8F9FA">
        <Grid Margin="0,0,0,686" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top"
           Width="40" Source="/Images/aviat.png"/>
            <Label Content="Пермского авиационного техникума им. А.Д. Швецова" HorizontalAlignment="Left"
           Margin="55,24,0,0" VerticalAlignment="Top"/>
            <Label Content="Электронная приемная компания" HorizontalAlignment="Left" Margin="55,1,0,0"
           VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
        </Grid>
        <Grid Margin="0,60,0,0">
            <Label Content="Паспортные данные" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Фамилия:" HorizontalAlignment="Left" 
                   Margin="10,41,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_Lastname" Height="24" Width="250" Margin="10,72,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label Content="Имя:" HorizontalAlignment="Left" 
                   Margin="297,41,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_Firstname" Height="24" Width="250" Margin="0,72,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Отчество:" HorizontalAlignment="Right" 
                   Margin="0,41,195,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_Middlename" Height="24" Width="248" Margin="0,72,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Дата рождения:" HorizontalAlignment="Left" 
                   Margin="10,101,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_DateofBirth" Height="24" Width="820" Margin="0,132,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Гражданство:" HorizontalAlignment="Left" 
                   Margin="10,161,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_Citizenship" Height="24" Width="820" Margin="0,187,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Место рождения:" HorizontalAlignment="Left" 
                Margin="10,216,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_PlaceofBirth" Height="24" Width="820" Margin="0,247,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Серия и номер паспорта:" HorizontalAlignment="Left" 
                   Margin="10,276,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_SerialandNumber" Height="24" Width="250" Margin="10,308,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label Content="Дата выдачи:" HorizontalAlignment="Left" 
                   Margin="297,276,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_DateofIssue" Height="24" Width="250" Margin="0,307,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Код подразделения:" HorizontalAlignment="Right"
                   Margin="0,276,137,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_DepartmentCode" Height="24" Width="248" Margin="0,307,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Кем выдан:" HorizontalAlignment="Left" 
    Margin="10,337,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_Issued" Height="24" Width="820" Margin="0,368,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Адрес по прописке:" HorizontalAlignment="Left" 
    Margin="10,397,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_AddressRegistration" Height="24" Width="535" Margin="10,428,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label Content="Район:" HorizontalAlignment="Right"
    Margin="0,397,211,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_District" Height="24" Width="248" Margin="0,428,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Адрес проживания фактически:" HorizontalAlignment="Left" 
    Margin="11,457,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_AddressRegistrationFact" Height="24" Width="535" Margin="11,488,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label Content="Район:" HorizontalAlignment="Right"
    Margin="0,457,211,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_DistrictFact" Height="24" Width="248" Margin="0,488,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Прикрепите сканы страниц  паспорта с фотографией и действующей  пропиской" HorizontalAlignment="Left" 
    Margin="10,523,0,0" VerticalAlignment="Top"/>
            <Label Content="(Формат документов должен быть PNG, JPEG или PDF, а максимальный размер каждого файла 5 МБ)" HorizontalAlignment="Left" Background="{x:Null}" FontSize="10"
    Margin="18,556,0,0" VerticalAlignment="Top" Foreground="Red"/>
            <TextBox x:Name="Link" Height="24" Margin="11,580,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" Width="739"/>
            <Button Content="Выбрать..." Click="ChooseImage" HorizontalAlignment="Right" Margin="0,580,10,0" VerticalAlignment="Top" Width="75" Height="25"/>
            <Button Content="Продолжить" Click="Next" HorizontalAlignment="Right" Margin="0,0,10,5" VerticalAlignment="Bottom" Width="150" Height="25"/>
        </Grid>
    </Grid>
</Page>
